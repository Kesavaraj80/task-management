datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  status      String
  priority    Int
  dueDate     DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String?
  tasks     Task[]
}
